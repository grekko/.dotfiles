[push]
	default = tracking

[credential]
  helper = osxkeychain

[merge]
  tool = opendiff

[branch]
  autosetuprebase = always

[color]
  ui     = auto
  branch = auto
  diff   = auto
  status = auto

[alias]
  a     = !git add . && git status -s
  aa    = !git add --all . && git status -s
  b     = branch
  ba    = branch --all
  bd    = "!gitbd() { git branch -D $1; git push origin :$1; }; gitbd"
  c     = commit
  cv    = commit -v
  co    = checkout
  d     = diff
  dc    = diff --cached
  l     = log -p
  pick  = cherry-pick
  pp    = !git pull && git push
  s     = status --long
  ss    = status --short
  st    = stash
  prune = remote prune origin
  cph   = !git log -n 1 --pretty=format:"%H" | pbcopy && echo "Copied last commit hash to clipboard"

[include]
  path = .gituser
  path = .githubconfig
