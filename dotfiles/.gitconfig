[push]
  default = matching

[user]
  name = Gregory Igelmund
  email = gig@betterplace.org

[credential]
  helper = osxkeychain

[merge]
  tool = opendiff

[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto

[alias]
  a  = !git add . && git status -s
  aa = !git add --all . && git status -s
  s  = status -s
  c  = commit
  b  = branch
  d  = diff
  l  = log -p

[include]
  path = ~/.gitconfig.local
