[push]
	default = tracking

[credential]
  helper = osxkeychain

[merge]
  tool = opendiff

[branch]
  autosetuprebase = always

[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto

[alias]
  a  = !git add . && git status -s
  aa = !git add --all . && git status -s
  s  = status -s
  c  = commit
  co = checkout
  b  = branch
  d  = diff
  dc = diff --cached
  l  = log -p
  st = stash
  pp = !git pull && git push
  bd = "!gitbd() { git branch -D $1; git push origin :$1; }; gitbd"

[include]
  path = .gituser
  path = .githubconfig
