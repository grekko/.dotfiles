[push]
	default = simple

[credential]
  helper = osxkeychain

[merge]
  tool = opendiff

[branch]
  autosetuprebase = always

[color]
  ui     = auto
  branch = auto
  diff   = auto
  status = auto

[alias]
  a      = !git add . && git status -s
  aa     = !git add --all . && git status -s
  b      = branch
  ba     = branch --all
  bd     = "!gitbd() { git branch -D $1; git push origin :$1; }; gitbd"
  c      = commit
  cv     = commit -v
  cvm    = commit -vm
  ca     = commit --amend
  co     = checkout
  d      = diff
  dc     = diff --cached
  l      = log -p
  pick   = cherry-pick
  pp     = !git pull && git push
  s      = status --long
  ss     = status --short
  st     = stash
  prune  = remote prune origin
  cph    = !git log -n 1 --pretty=format:"%H" | pbcopy && echo "Copied last commit hash to clipboard"
  cop    = !git co $(git branch|pick)
  slog   = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  up     = !git reup && git delete-merged-branches
  pub    = !git push -u origin $(git rev-parse --abbrev-ref HEAD)
  pubf    = !git push -f -u origin $(git rev-parse --abbrev-ref HEAD)
  praise = blame

[include]
  path = .gituser
  path = .githubconfig
[github]
	tokentype = ssh
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[rerere]
	enabled = true
[core]
	autocrlf = input
[hub]
	host = github.wdf.sap.corp
