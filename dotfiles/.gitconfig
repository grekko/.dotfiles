[push]
  default = matching

[credential]
  helper = osxkeychain

[merge]
  tool = opendiff

[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto

[alias]
  a  = !git add . && git status -s
  aa = !git add --all . && git status -s
  s  = status -s
  c  = commit
  co = checkout
  b  = branch
  d  = diff
  dc = diff --cached
  l  = log -p
  st = stash
  pp = !git pull && git push
  up = !git stash && git pull --rebase && git stash pop

[include]
  path = .gituser
  path = .githubconfig
