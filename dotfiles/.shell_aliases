# Aliases shared across all systems and shells (bash/fish)
alias ssht="ssh-tmux"
alias ll="ls -halt"
alias be="bundle exec"
alias vi="vim"
alias up!="dotfiles-up; source $DOTFILES_SHELL_CONFIG"
# NOTE: just works for fish
alias lvim="env VIM_LIGHT_MODE=1 vim"
alias mux="tmuxinator"

# docker stuff
alias docker-shell="docker exec -it (docker ps -q) /bin/sh"
