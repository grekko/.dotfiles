# system
alias ll='pwd && ls -lisahF'
alias cl='clear'
alias psa='ps axo "user,pid,ppid,%cpu,%mem,tty,stime,state,command"'
alias xfind='find . -name "*" | xargs grep'
alias space='du -csh * |sort -n -r'

# git
alias ga='git add'
alias gc='git commit'
alias gca='git commit -a'
alias gs='git status'
alias gco='git checkout'
alias gp='git push'
alias gpm='git push origin master'
alias gph='git push heroku master'
alias gr='git remote add'
alias grm='git rm --force -r --cached'
alias gup='git-smart-pull'
alias glog='git-smart-log'
alias gd='git diff'
alias gdc='git diff --cached'
alias gb='git branch'
alias gba='git branch -a'
alias gst='git stash'
alias gstl='git stash list'
alias gstp='git stash pop'
alias gstc='git stash clear'
alias gstd='git stash show -u'

# ruby
alias rbd='ruby --debug'

# postfix
alias postrr='sudo launchctl stop org.postfix.master && sudo launchctl start org.postfix.master && sudo launchctl list|grep post'
alias postst='sudo launchctl list|grep post'

alias gitign='git update-index --assume-unchanged'
alias gitunign='git update-index --no-assume-unchanged'
alias gitignl='git ls-files -v|grep "h "'

# erfa
alias erfasql='mysql -u root -p onlineerfa_test < '
