# http proxy
function enable_proxy
  set -x http_proxy http://proxy.wdf.sap.corp:8080
  set -x https_proxy http://proxy.wdf.sap.corp:8080
  set -x all_proxy http://proxy.wdf.sap.corp:8080
  set -x ftp_proxy http://proxy.wdf.sap.corp:8080
  set -x no_proxy sap.corp,localhost,196.168.42.2,192.168.59.103,192.168.99.100
end

function disable_proxy
  set -x http_proxy ''
  set -x https_proxy ''
  set -x all_proxy ''
  set -x ftp_proxy ''
  set -x no_proxy ''
end

# Enable proxy by default
enable_proxy
