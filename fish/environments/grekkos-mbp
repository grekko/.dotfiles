set -x EDITOR vim

# Homebrew
set -x PATH /usr/local/bin $PATH

# Bundler
set -x BUNDLER_JOB_SIZE 4

# Direnv
eval (direnv hook fish)

# NPM
set -x PATH /usr/local/share/npm/bin $PATH

# Rails
alias devlog 'tail -F log/development.log'

# Rbenv
source (rbenv init -|psub)

# High contrast VIM. E.g. for presentations or lectures
alias hcvim 'vim -c ":colorscheme github"'

# NVM
set -gx NVM_DIR "$HOME/.nvm"

# Google Cloud Utils
set -x MANPATH /opt/homebrew-cask/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/help/man /usr/local/share/man /usr/share/man /opt/x11/share/man

# Configure locale to EN
set -x LC_ALL en_US.UTF-8
set -x LC_CTYPE en_US.UTF-8

# Homebrew
set -x HOMEBREW_NO_ANALYTICS 1
