set -x EDITOR vim

## Homebrew
set -x PATH /usr/local/bin $PATH
set -x PATH /usr/local/sbin $PATH

## Bundler
set -x BUNDLER_JOB_SIZE 4

## Direnv
eval (direnv hook fish)

## NPM
set -x PATH /usr/local/share/npm/bin $PATH

## VIM
alias vi vim

## Rails
alias devlog 'tail -F log/development.log'

## Ruby
alias bx 'bundle exec'

## Rbenv
set -x PATH ~/.rbenv/bin $PATH
status --is-interactive; and . (rbenv init -|psub)

## Cargo
set -x PATH ~/.cargo/bin $PATH

## Scripts
set -x PATH ~/.scripts $PATH

# Functions & Aliases
alias ssht ssh-tmux

# High contrast VIM. E.g. for presentations or lectures
alias hcvim 'vim -c ":colorscheme github"'

# Docker
set -gx DOCKER_TLS_VERIFY "1";
set -gx DOCKER_HOST "tcp://192.168.99.101:2376";
set -gx DOCKER_CERT_PATH "/Users/gregoryigelmund/.docker/machine/machines/default";
set -gx DOCKER_MACHINE_NAME "default";

# NVM
set -gx NVM_DIR "$HOME/.nvm"
