# BINDKEYS
bindkey "^R"    history-incremental-search-backward
bindkey "^[[3~" delete-char             # Del
bindkey "^[e"   expand-cmd-path         # C-e for expanding path of typed command.
bindkey "^[[A"  up-line-or-search       # Up arrow for back-history-search.
bindkey "^[[B"  down-line-or-search     # Down arrow for fwd-history-search.
bindkey " "     magic-space             # Do history expansion on space.

# Move cursor command line
bindkey "^A" beginning-of-line
bindkey "^E" end-of-line

# Move cursor with CTRL+LEFT, CTRL+RIGHT to jump words
bindkey '^[[5D' emacs-backward-word
bindkey '^[[5C' emacs-forward-word

# Move cursor with ALT+LEFT, ALT+RIGHT to delete words next to the cursors
bindkey '^[b'  backward-delete-word
bindkey '^[[1;9C'  delete-word
