export ZSH=$HOME/.oh-my-zsh
export ZSH_CUSTOM=$DOTFILES_HOME/zsh/oh-my-zsh-customs

if [[ -s ${DOTFILES_HOME}/zsh/configs/`hostname -s` ]] ; then source ${DOTFILES_HOME}/zsh/configs/`hostname -s` ; fi
if [[ -s ${DOTFILES_HOME}/zsh/configs/`hostname -s`.local ]] ; then source ${DOTFILES_HOME}/zsh/configs/`hostname -s`.local ; fi

source ${DOTFILES_HOME}/zsh/functions
source ${DOTFILES_HOME}/zsh/aliases
source ${DOTFILES_HOME}/zsh/bindkeys
source ${DOTFILES_HOME}/zsh/completions