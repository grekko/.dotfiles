# ZSH Settings
setopt hist_ignore_dups     # ignore duplication command history list
setopt share_history        # share command history data
setopt HIST_IGNORE_SPACE
setopt APPEND_HISTORY # write history only when closing
setopt EXTENDED_HISTORY # add more info

HISTFILE=$HOME/.zsh_history
SAVEHIST=10000
HISTSIZE=10000

REPORTTIME=10 # Show elapsed time if command took more than X seconds
LISTMAX=0 # ask to complete if top of list would scroll off screen

autoload compinit && compinit # Load completions for Ruby, Git, etc.


# Path Extensions
source $DOTFILES_HOME/zsh/extensions/brew
source $DOTFILES_HOME/zsh/extensions/npm
source $DOTFILES_HOME/zsh/extensions/pear
source $DOTFILES_HOME/zsh/extensions/java
source $DOTFILES_HOME/zsh/extensions/rvm
source $DOTFILES_HOME/zsh/extensions/userbin
source $DOTFILES_HOME/zsh/extensions/bundler


# Oh My ZSH
export ZSH_CUSTOM=$DOTFILES_HOME/zsh/oh-my-zsh-customs
export ZSH_THEME="af-magic-oneliner"
plugins=(git rvm vagrant rails3 brew npm rake)
source $ZSH/oh-my-zsh.sh


# RVM
PS1="\$($HOME/.rvm/bin/rvm-prompt v g) $PS1"


# GIT
GIT_AUTHOR_NAME="Gregory Igelmund"
GIT_COMMITTER_NAME="$GIT_AUTHOR_NAME"
git config --global user.name "$GIT_AUTHOR_NAME"
GIT_AUTHOR_EMAIL="gregory.igelmund@gmail.de"
GIT_COMMITTER_EMAIL="$GIT_AUTHOR_EMAIL"
git config --global user.email "$GIT_AUTHOR_EMAIL"

export MERGEPROG=/usr/bin/opendiff
export EDITOR='subl -w'


# Custom
export BLOG_PATH=/Users/gregoryigelmund/Workspace/grekko.github.com
