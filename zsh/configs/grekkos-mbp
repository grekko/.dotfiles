# ZSH Settings
setopt append_history
setopt extended_history
setopt hist_ignore_dups     # ignore duplication command history list
setopt share_history        # share command history data
setopt HIST_IGNORE_SPACE
setopt APPEND_HISTORY # write history only when closing
setopt EXTENDED_HISTORY # add more info
unsetopt correct_all

HISTFILE=$HOME/.zsh_history
SAVEHIST=10000
HISTSIZE=10000

REPORTTIME=10 # Show elapsed time if command took more than X seconds
LISTMAX=0 # ask to complete if top of list would scroll off screen

autoload compinit && compinit # Load completions for Ruby, Git, etc.


# Path Extensions
source $DOTFILES_HOME/zsh/extensions/npm
source $DOTFILES_HOME/zsh/extensions/git
source $DOTFILES_HOME/zsh/extensions/java
source $DOTFILES_HOME/zsh/extensions/rvm
source $DOTFILES_HOME/zsh/extensions/bundler
source $DOTFILES_HOME/zsh/extensions/pmd
source $DOTFILES_HOME/zsh/extensions/nginx
source $DOTFILES_HOME/zsh/extensions/sencha
source $DOTFILES_HOME/zsh/extensions/rails
source $DOTFILES_HOME/zsh/extensions/powerline

source $DOTFILES_HOME/zsh/extensions/app-bettercooking


export MERGEPROG=/usr/bin/opendiff
alias m='mvim'
export EDITOR='/usr/local/bin/vim'


# Custom
export BLOG_PATH=/Users/gregoryigelmund/Workspace/grekko.github.com


# Theme
source $DOTFILES_HOME/zsh/themes/af-magic-oneliner.zsh-theme
