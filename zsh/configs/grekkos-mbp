source $DOTFILES_HOME/zsh/extensions/rvm
source $DOTFILES_HOME/zsh/extensions/sencha
source $DOTFILES_HOME/zsh/extensions/tmuxinator
source $DOTFILES_HOME/zsh/extensions/zsh-syntax-highlighting

source $DOTFILES_HOME/zsh/extensions/app-betterplace
source $DOTFILES_HOME/zsh/extensions/app-bettercooking

# Path Extensions
# source $DOTFILES_HOME/zsh/path-extensions/rvm
source $DOTFILES_HOME/zsh/path-extensions/brew
