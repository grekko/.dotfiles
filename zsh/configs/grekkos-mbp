source $DOTFILES_HOME/zsh/path-extensions/pear
source $DOTFILES_HOME/zsh/path-extensions/python
source $DOTFILES_HOME/zsh/path-extensions/scripts
source $DOTFILES_HOME/zsh/path-extensions/sencha
source $DOTFILES_HOME/zsh/path-extensions/userbin

export MERGEPROG=/usr/bin/opendiff
