# ZSH Libs
source $DOTFILES_HOME/zsh/lib/git.zsh
source $DOTFILES_HOME/zsh/lib/spectrum.zsh
source $DOTFILES_HOME/zsh/lib/theme-and-appearance.zsh

# ZSH Settings
setopt append_history
setopt extended_history
setopt hist_ignore_dups     # ignore duplication command history list
setopt share_history        # share command history data
setopt HIST_IGNORE_SPACE
setopt APPEND_HISTORY # write history only when closing
setopt EXTENDED_HISTORY # add more info
unsetopt correct

HISTFILE=$HOME/.zsh_history
SAVEHIST=10000
HISTSIZE=10000

REPORTTIME=10 # Show elapsed time if command took more than X seconds
LISTMAX=0 # ask to complete if top of list would scroll off screen


# Functions
# http://unix.stackexchange.com/questions/33255/how-to-define-and-load-your-own-shell-function-in-zsh
fpath=($DOTFILES_HOME/zsh/functions $fpath)
autoload -Uz hub take


# Completions
# https://github.com/zsh-users/zsh-completions
fpath=($DOTFILES_HOME/zsh/completions $fpath)
# Actually loading completions and creating ~/.zcompdump cache file
autoload compinit && compinit


# Extensions
source $DOTFILES_HOME/zsh/extensions/bundler
source $DOTFILES_HOME/zsh/extensions/git
source $DOTFILES_HOME/zsh/extensions/rbenv
source $DOTFILES_HOME/zsh/extensions/tmux
