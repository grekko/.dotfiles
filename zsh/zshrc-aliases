# scp
alias scpr='rsync --partial --progress --rsh=ssh'
# fast directory change
alias ..='cd .. && ll'
alias ...='cd ../.. && ll'
alias ....='cd ../../.. && ll'
# working with tars
alias utar='tar xvf'
alias ctar='tar cvf'
# working with files
alias cpr='cp -R'
alias duf='du -sk * | sort --numeric-sort --reverse | perl -ne '\''($s,$f)=split(m{\t});for (qw(K M G)) {if($s<1024) {printf("%.1f",$s);print "$_\t$f"; last};$s=$s/1024}'\'
# Finder
alias o='open .'
# Processes
alias tu='top -o cpu' # cpu
alias tm='top -o vsize' # memory

alias tk='take'
alias rmrf='rm -rf'

# vagrant
alias v='vagrant'
alias vup='vagrant up'
alias vhalt='vagrant halt'
alias vrestart='vagrant halt && vagrant up'
alias vssh='vagrant ssh'
alias vedit='$EDITOR Vagrantfile'
# current projects
alias fs='foreman start'
# rspec
alias spec='rspec --color --format documentation'

# git svn
alias gsvncl='git svn clone'
alias gsvnu='git svn rebase'
alias gsvnc='git svn dcommit'

# helper
alias reload='source ~/.zshrc && clear'
alias ec='sudo ${EDITOR} ${DOTFILES_HOME}/.config'
alias ecz='sudo ${EDITOR} ~/.zshrc'
alias ecza='sudo ${EDITOR} ${DOTFILES_HOME}/zsh/zshrc-aliases'
alias ecba='sudo ${EDITOR} ${DOTFILES_HOME}/bash/aliases'
alias eczb='sudo ${EDITOR} ${DOTFILES_HOME}/zsh/zshrc-bindkeys'
alias eczf='sudo ${EDITOR} ${DOTFILES_HOME}/zsh/zshrc-functions'
alias ecv='sudo ${EDITOR} ${DOTFILES_HOME}/vim/.vimrc'
