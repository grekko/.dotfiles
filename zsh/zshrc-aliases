# scp
alias scpr='rsync --partial --progress --rsh=ssh'
# fast directory change
alias ..='cd .. && ll'
alias ...='cd ../.. && ll'
alias ....='cd ../../.. && ll'
# working with tars
alias utar='tar xvf'
# working with files
alias cpr='cp -R'
alias duf='du -sk * | sort --numeric-sort --reverse | perl -ne '\''($s,$f)=split(m{\t});for (qw(K M G)) {if($s<1024) {printf("%.1f",$s);print "$_\t$f"; last};$s=$s/1024}'\'
# Finder
alias o='open .'
# Processes
alias tu='top -o cpu' # cpu
alias tm='top -o vsize' # memory

# webdev
alias m=${EDITOR}
alias ms='sudo ${EDITOR}'
alias ct='ctags -R'
alias ap2r='echo "restarting apache";sudo apachectl restart'
alias subl='/Applications/Sublime\ Text\ 2\.app/Contents/SharedSupport/bin/subl'
# vagrant
alias vup='vagrant up'
alias vhalt='vagrant halt'
alias vssh='vagrant ssh'
# current projects
# alias thesis='cd ~/Documents/Studium/HS-Furtwangen,\ Digitale\ Medien/Masterthesis/Thesis/latex; mvim masterthesis.tex'
alias subbet='subl ~/Workspace/betterplace'
alias subbetg='subl ~/.rvm/gems/ruby-1.8.7-p357@local.betterplace.de/gems'
alias bet='cd ~/Workspace/betterplace; gp; subl .; tab script/server -p 3000'
alias betsrv='tab cd ~/Workspace/betterplace; gup; script/server -p 3001'
alias betsrvl='tab cd ~/Workspace/betterplace.live; gup; script/server -p 3001'
alias betgitx='open -a /Applications/GitX.app ~/Workspace/betterplace'
# rspec
alias spec='rspec --color --format documentation'
# bundler
alias binit="bi && b package && echo 'vendor/ruby' >> .gitignore"

# git svn
alias gsvncl='git svn clone'
alias gsvnu='git svn rebase'
alias gsvnc='git svn dcommit'
# alias for brew ctags install
# alias ctags="`brew --prefix`/bin/ctags"

# helper
alias reload='source ~/.zshrc && clear'
alias ec='sudo ${EDITOR} ${DOTFILES_HOME}/.config'
alias ecz='sudo ${EDITOR} ~/.zshrc'
alias ecza='sudo ${EDITOR} ${DOTFILES_HOME}/zsh/zshrc-aliases'
alias ecba='sudo ${EDITOR} ${DOTFILES_HOME}/bash/aliases'
alias eczb='sudo ${EDITOR} ${DOTFILES_HOME}/zsh/zshrc-bindkeys'
alias eczf='sudo ${EDITOR} ${DOTFILES_HOME}/zsh/zshrc-functions'
alias ecv='sudo ${EDITOR} ${DOTFILES_HOME}/vim/.vimrc'
