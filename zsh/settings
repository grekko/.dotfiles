# ZSH Settings
setopt append_history
setopt extended_history
setopt hist_ignore_dups     # ignore duplication command history list
setopt share_history        # share command history data
setopt HIST_IGNORE_SPACE
setopt APPEND_HISTORY # write history only when closing
setopt EXTENDED_HISTORY # add more info
unsetopt correct

# Enabling bash-like command line editing
autoload -z edit-command-line
zle -N edit-command-line

# Customizations
disable -r time       # disable shell reserved word

# Bash-like navigation
autoload -U select-word-style
select-word-style bash

HISTFILE=$HOME/.zsh_history
SAVEHIST=10000
HISTSIZE=10000

REPORTTIME=10 # Show elapsed time if command took more than X seconds
LISTMAX=0 # ask to complete if top of list would scroll off screen

# Actually loading completions and creating ~/.zcompdump cache file
autoload -U compinit && compinit

# Move into completions folder or something
compdef _ssh ssh-tmux=ssh

