# Path to .dotfiles
export DOTFILES_HOME=~/.dotfiles

# Path to your oh-my-zsh configuration.
export ZSH=$HOME/.oh-my-zsh

source $ZSH/oh-my-zsh.sh

setopt hist_ignore_dups     # ignore duplication command history list
setopt share_history        # share command history data
setopt HIST_IGNORE_SPACE
setopt APPEND_HISTORY # write history only when closing
setopt EXTENDED_HISTORY # add more info

HISTFILE=~/.zsh_history
SAVEHIST=10000
HISTSIZE=10000

REPORTTIME=10 # Show elapsed time if command took more than X seconds
LISTMAX=0 # ask to complete if top of list would scroll off screen

# Load completions for Ruby, Git, etc.
autoload compinit
compinit

# VI behaviour
#set -o vi
#bindkey -v

# colors
CDEFAULT="\[\033[1;00m\]"
CBLACK="\[\033[1;30m\]"
CYELLOW="\[\033[1;33m\]"
CGREEN="\[\033[1;32m\]"
CWHITE="\[\033[1;37m\]"
CBLUE="\[\033[1;36m\]"

# Customize to your needs...
source ${DOTFILES_HOME}/zsh/zshrc-functions
source ${DOTFILES_HOME}/zsh/zshrc-aliases
source ${DOTFILES_HOME}/zsh/zshrc-bindkeys
source ${DOTFILES_HOME}/zsh/zshrc-completion

if [[ -s ${DOTFILES_HOME}/zsh/zshrc-config ]] ; then source ${DOTFILES_HOME}/zsh/zshrc-config ; fi
